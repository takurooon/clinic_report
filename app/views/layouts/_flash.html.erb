<div class="container flash sticky-top mt-2 px-md-0">
  <div class="row">
    <div class="col-lg-5 offset-lg-2 col-md-8 offset-md-2">
      <% if alert %>
        <div class="alert alert-danger" role="alert">
          <p class="alert alert-error"><%= alert %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container flash sticky-top mt-2 px-md-0">
  <div class="row">
    <div class="col-lg-5 offset-lg-2 col-md-8 offset-md-2">
      <% if notice %>
        <div class="alert alert-success" role="alert">
          <p class="alert alert-success"><%= notice %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>