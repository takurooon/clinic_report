<div class="container password-remind m-bottom">
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-md-5 mb-md-5">
      <div class="card text-center">
        <div class="pt-4">
          <h2>パスワードの再発行</h2>
        </div>
        <div class="card-body pt-0">
          <div class="pt-0">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group mt-0 text-left">
                <%= f.label :email, '登録済みのメールアドレスを入力してください', for: "formGroupInput", class: "bmd-label-floating" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: "formGroupInput" %>
              </div>
              <div class="actions mt-5">
                <%= f.submit "パスワードの再発行", class: 'btn btn-raised btn-primary mx-auto d-block w-75'%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>