<div class="container signup-in">
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-md-5 mb-md-5">
      <div class="card text-center">
        <div class="card-header">
          <h2><i class="fas fa-user-plus", color="#4BAAF3"></i>&nbsp;&nbsp;新規登録</h2>
        </div>
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-pencil-alt", color="#4BAAF3"></i>&nbsp;&nbsp;アカウント作成</h5>
          <p class="card-text mt-4">以下項目を入力/選択の上、登録してください</p>
          <div class="p-3">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
      
              <div class="form-group mt-0">
                <%= f.label :name, 'ユーザー名' %>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: '1〜20文字以内' %>
              </div>
              
              <div class="form-group mt-0">
                <%= f.label :email, 'メール' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: '1〜20文字以内' %>
              </div>
      
              <div class="form-group mt-0">
                <%= f.label :password, 'パスワード' %>
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: '半角英数字 6〜16文字以下' %>
              </div>
      
              <div class="form-group mt-0 mb-3">
                <%= f.label :password_confirmation, 'パスワード（確認）' %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: '半角英数字 6〜16文字以下' %>
              </div>
              
              <div class="actions mt-5">
                <%= f.submit '登録', class: 'btn btn-raised btn-primary mx-auto d-block w-75' %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>