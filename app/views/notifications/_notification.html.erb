                    <% end %>
                  <% elsif Time.now.year - notification.report.user.birthday.year <= 30 %>
                    <% if Time.now.month < notification.report.user.birthday.month %>
                      <div class="m-0 p-0 base_icon4 text-center">
                        <%= image_tag("icon/g_25_29.png", alt: "generation25_29", class: "icon_image4_border", loading: "lazy", title: "25〜29歳") %>
                        <%= image_tag("icon/#{icon_number}.svg", alt: "generation25_29", class: "icon_on_icon4", loading: "lazy", title: "25〜29歳") %>
                      </div>
                    <% else %>
                      <div class="m-0 p-0 base_icon4 text-center">
                        <%= image_tag("icon/g_30_34.png", alt: "generation30_34", class: "icon_image4_border", loading: "lazy", title: "30〜34歳") %>
                        <%= image_tag("icon/#{icon_number}.svg", alt: "generation30_34", class: "icon_on_icon4", loading: "lazy", title: "30〜34歳") %>
                      </div>
                    <% end %>
                  <% elsif Time.now.year - notification.report.user.birthday.year <= 35 %>
                    <% if Time.now.month < notification.report.user.birthday.month %>
