                        <%= image_tag("icon/#{icon_number}.svg", alt: "generation35_39", class: "icon_on_icon4", loading: "lazy", title: "35〜39歳") %>
                      </div>
                    <% end %>
                  <% elsif Time.now.year - notification.report.user.birthday.year <= 40 %>
                    <% if Time.now.month < notification.report.user.birthday.month %>
                      <div class="m-0 p-0 base_icon4 text-center">
                        <%= image_tag("icon/g_35_39.png", alt: "generation35_39", class: "icon_image4_border", loading: "lazy", title: "35〜39歳") %>
                        <%= image_tag("icon/#{icon_number}.svg", alt: "generation35_39", class: "icon_on_icon4", loading: "lazy", title: "35〜39歳") %>
                      </div>
                    <% else %>
                      <div class="m-0 p-0 base_icon4 text-center">
                        <%= image_tag("icon/g_40_44.png", alt: "generation40_44", class: "icon_image4_border", loading: "lazy", title: "40〜44歳") %>
                        <%= image_tag("icon/#{icon_number}.svg", alt: "generation40_44", class: "icon_on_icon4", loading: "lazy", title: "40〜44歳") %>
                      </div>
                    <% end %>
                  <% elsif Time.now.year - notification.report.user.birthday.year <= 45 %>
                    <% if Time.now.month < notification.report.user.birthday.month %>
                      <div class="m-0 p-0 base_icon4 text-center">
                        <%= image_tag("icon/g_40_44.png", alt: "generation40_44", class: "icon_image4_border", loading: "lazy", title: "40〜44歳") %>
                        <%= image_tag("icon/#{icon_number}.svg", alt: "generation40_44", class: "icon_on_icon4", loading: "lazy", title: "40〜44歳") %>
                      </div>
                    <% else %>
                      <div class="m-0 p-0 base_icon4 text-center">
                        <%= image_tag("icon/g_45_.png", alt: "generation45_", class: "icon_image4_border", loading: "lazy", title: "45歳〜") %>
                        <%= image_tag("icon/#{icon_number}.svg", alt: "generation45_", class: "icon_on_icon4", loading: "lazy", title: "45歳〜") %>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="m-0 p-0 base_icon4 text-center">
                      <%= image_tag("icon/g_45_.png", alt: "generation45_", class: "icon_image4_border", loading: "lazy", title: "45歳〜") %>
                      <%= image_tag("icon/#{icon_number}.svg", alt: "generation45_", class: "icon_on_icon4", loading: "lazy", title: "45歳〜") %>
                    </div>
                  <% end %>
                <% end %>
                <strong><%= notification.report.user.name + 'さんのレポコ' %></strong>
              <% end %>
            </span>
          <% end %>
          にコメントしました。
          <%= link_to notification.report do %>
            <p class="text-muted mb-0 mt-3">
              <% comment = Comment.find_by(id: notification.comment_id)&.comment %>
              <%= strip_tags(comment.to_s).gsub(/[\n]/,"").strip.truncate(30) %>&nbsp;&nbsp;&nbsp;…
            </p>
          <% end %>
        <% end %>
      </span>
      <small class="text-muted text-right">
        <%= time_ago_in_words(notification.created_at).upcase %>
      </small>
    </div>
  </div>
  <hr>
</div>