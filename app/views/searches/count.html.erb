<div class="container pb-5 mb-5 m-bottom">
  <h5 class="d-sm d-md-none mt-5 mb-5 text-center"><span class="marker-underline"><strong>採卵･移植回数</strong></span>&nbsp;からレポコを探す</h5>
  <h4 class="d-none d-md-block col-md-8 offset-md-2 mt-5 mb-5"><span class="marker-underline"><strong>採卵･移植回数</strong></span>&nbsp;からレポコを探す</h4>
  <small class="text-muted d-flex d-md-none col-md-8 offset-md-2 mt-4 mb-4">
    <i data-feather="chevrons-left" class="feather-icon-style1 pb-1"></i>&nbsp;&nbsp;<%= link_to "カテゴリ一覧", search_path %>
  </small>
  <small class="text-muted d-none d-md-block col-md-8 offset-md-2 mt-4 mb-4">
    <i data-feather="chevrons-left" class="feather-icon-style1 pb-1"></i>&nbsp;&nbsp;<%= link_to "カテゴリ一覧", search_path %>
  </small>

  <div class="row all_age pb-5 mb-5">
    <div class="col-md-8 offset-md-2 main-column">
      <div class="tab-wrap1 mt-3">
        <input id="TAB-01" type="radio" name="TAB" class="tab-switch" checked="checked" /><label class="tab-label" for="TAB-01">採卵回数</label>
        <div class="tab-content1">
          <% if false %><%= select "report", :total_number_of_sairan, @sairan.invert, { prompt: "採卵回数  で絞り込み" }, { class: "form-control my-3", onchange: "location = 'count/sairan/' + this.value" } %><% end %>
          <div class="row pl-3 pt-4">
            <%= collection_radio_buttons(:report, :total_number_of_sairan, @sairan, :first, :last) do |b| %>
              <div class="col-4 col-lg-12 px-0 mb-3">
                <div class="form-check pl-2">
                  <%= b.label class: "radio-inline mb-1" do %>
                    <%= b.radio_button class: "q_radio", onchange: "location = 'count/sairan/' + this.value" %>
                    <%= b.text %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <input id="TAB-02" type="radio" name="TAB" class="tab-switch" /><label class="tab-label" for="TAB-02">移植回数</label>
        <div class="tab-content1">
          <% if false %><%= select "report", :total_number_of_transplants, @ishoku.invert, { prompt: "移植回数   で絞り込み" }, { class: "form-control my-3", onchange: "location = 'count/ishoku/' + this.value" } %><% end %>
          <div class="row pl-3 pt-4">
            <%= collection_radio_buttons(:report, :total_number_of_transplants, @ishoku, :first, :last) do |b| %>
              <div class="col-4 col-lg-12 px-0 mb-3">
                <div class="form-check pl-2">
                  <%= b.label class: "radio-inline mb-1" do %>
                    <%= b.radio_button class: "q_radio", onchange: "location = 'count/ishoku/' + this.value" %>
                    <%= b.text %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>