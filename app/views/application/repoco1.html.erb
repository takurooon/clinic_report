          <%= image_tag "home/logo.png", alt: "logo", width: "280px", class: "img-fluid", loading: "lazy" %>
        </div>
        <div class="col-12 text-center">
          <%= link_to root_path, { title: "レポコ一覧", style: "text-decoration: none;" } do %>
            <button class="brand_btn">レポコ一覧</button>
