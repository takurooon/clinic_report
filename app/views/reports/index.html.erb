<% unless @reports.current_page == 1 %>
  <div class="pb-3">
    <%= render 'category_header' %>
  </div>
<% end %>
<div class="container main-index mt-3 m-bottom">
  <% if false %>
    <div class="d-block d-sm-none text-right small pb-3">
      <%= link_to "レポコの作り方", make_path, class:"small" %>
    </div>
  <% end %>

  <% if @reports.current_page == 1 %>
    <div class="pt-2 pb-4 d-flex justify-content-center row">
      <div class="mt-0 col-sm-7 text-center px-0">
        <div class="py-3">
          <h5 class="font-weight-bold" style="font-family: 游ゴシック体,YuGothic,游ゴシック Medium,Yu Gothic Medium,游ゴシック,Yu Gothic,sans-serif;">経験をカタチに&nbsp;&nbsp;情報をエールに</h5>
        </div>
        <%= form_tag(search_cl_path,:method => 'get', class: "mb-0") do %>
          <div class="p-0">
            <%= text_field_tag :keyword, "", { class: "font-weight-bold search-window", placeholder: "クリニック名から探す" } %>
          </div>
          <div class="row d-flex justify-content-center px-4">
            <div class="col-sm-8">
              <div class="py-2 px-3">
                <%= submit_tag '検索する', :name => nil, class: "btn btn-info w-100 rounded-lg active", style: "background-color: #2ECFC0; color: #ffffff;box-shadow: 0 1px 2px gray;" %>
              </div>
            </div>
          </div>
          <div class="px-4">
            <div class="px-3">
              <div class="d-none d-sm-block">
                <div class="mt-3 py-2 small d-flex align-item-center justify-content-center">
                  <i data-feather="chevrons-right" class="pb-1 text-primary"></i><%= link_to "クリニック一覧から探す", clinics_path, class: "text-primary" %>
                </div>
                <div class="py-2 small d-flex align-item-center justify-content-center">
                  <i data-feather="chevrons-right" class="pb-1 text-primary"></i><%= link_to "カテゴリから探す", search_path, class: "text-primary" %>
                </div>
              </div>
              <div class="d-block d-sm-none">
                <div class="mt-3 py-2 small d-flex align-item-center justify-content-end">
                  <i data-feather="chevrons-right" class="pb-1 text-primary"></i><%= link_to "クリニック一覧から探す", clinics_path, class: "text-primary" %>
                </div>
                <div class="py-2 small d-flex align-item-center justify-content-end">
                  <i data-feather="chevrons-right" class="pb-1 text-primary"></i><%= link_to "カテゴリから探す", search_path, class: "text-primary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      </div>
      <div class="d-none d-sm-block">
        <div style="height: 350px;">
        </div>
      </div>
    </div>
  <% end %>

  <div class="row px-0">
    <div class="col-lg-7 offset-lg-1 main-column text-color px-0">

      <div class="px-3 mt-0">
        <div class="pb-4">
          <p class="mb-2"><span class="small">現在公開中のレポコ:</span>&nbsp;&nbsp;<span class="marker-underline"><span class="text-danger font-weight-bold"><%= @released_reports.size %>&nbsp;</span><span class="small font-weight-bold">投稿</span></span></p>
          <p class="mb-0"><span class="small">レポコのある施設数:</span>&nbsp;&nbsp;<span class="marker-underline"><span class="text-danger font-weight-bold"><%= @clinics_count_released.size %>&nbsp;</span><span class="small font-weight-bold">施設</span></span></p>
        </div>
        <% if user_signed_in? && @draft_reports.present? %>
          <div class="alert alert-info px-3 py-2 small rounded-lg">
            <p class="mb-0"><%= @user.name %>さん、下書きのレポコが<%= @draft_reports.count %>件あります。</p>
            <p class="mb-0"><%= image_tag"home/finger_mom_right.svg", width: "20px", class: "img-fluid pb-1", loading: "lazy" %>&nbsp;<%= link_to "下書きはこちら", my_page_path, class: "text-primary font-weight-bold" %></p>
          </div>
        <% end %>
        <%= render 'center' %>
        <div class="mt-5 pt-5">
          <%= paginate @reports %>
        </div>

        <div id="carouselExampleControls" class="carousel slide mt-5" data-interval=9000 data-pause=hover data-ride="carousel">
          <div class="text-center">
            <h5 class="mb-2"><i><span class="marker-underline">&nbsp;&nbsp;お知らせ&nbsp;&nbsp;</span></i></h5>
          </div>
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleControls" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleControls" data-slide-to="1"></li>
            <li data-target="#carouselExampleControls" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
