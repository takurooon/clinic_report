<div class="d-flex align-items-center">
  <div class="ml-auto reports_button">
    <%= form_tag reports_path, method: :get, class: 'reports__searchForm' do %>
      <%= select_tag :tag_id,
                    options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
                    {
                      prompt: 'タグで絞り込み',
                      class: 'form-control reports__select',
                      onchange: 'submit(this.form);'
                    }
      %>
    <% end %>
    <% if current_user %>
      <%= link_to "レポートを作成", new_report_path, class:"btn btn-outline-info button" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-md-3 d-none d-md-block">
      <%= render 'left' %>
    </div>

    
    <div id="posts-container" class="col-12 col-md-6">
      <%= render 'center' %>
    </div>

    <div class="col-12 col-md-3 pt-md-4">
    <%= render 'right' %>
    </div>
  </div>
</div>


<%= paginate @reports %>