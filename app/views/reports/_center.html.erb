<div class="container px-1">
  <h3 class="d-none d-md-block col-md-8 offset-md-2 mt-4 mb-5">最新レポート</h3>
  <h3 class="d-sm d-md-none mt-4 mb-5 text-center">最新レポート</h3>
  
  <div class="container main-index">
    <div class="row">
      <div class="col-md-8 offset-md-2 main-column">
        <% @reports.each do |report| %>
          <div class="row">
            <div class="card col-12 mb-4 pb-0">
              <%= link_to report do %>
              <div class="card-header media">
                <div class="index-title d-flex align-items-center">
                  <% if report.title.empty? %>
                    <h4 class="mb-0mt-2"><%= report.user.name %>さんの&nbsp;&nbsp;<%= report.clinic.name %>(<%= report.clinic.city.prefecture.name %>)での治療レポート</h4>
                  <% else %>
                    <h4 class="mb-0 mt-2"><%= report.title %></h4>
                  <% end %>
                </div>
              </div>
              <% end %>
              
              <div class="card-body">
                <div class="media-body">
                  <div class="row">
                    <div class="col-3 pl-0 text-center">
                      <%= link_to "アイコン"%>
                      <div class="mt-4 mb-2 d-sm d-md-none align-items-center text-center">
                        <p><%= link_to report.user.name, user_path(report.user_id) %></p>
                      </div>
                    </div>
                    <div class="col-9 pl-0">
                      <div class="d-lg-flex justify-content-start">
                        <div class="d-flex justify-content-start mr-2">
                          <div class="age-badge pr-2">
                            <span class="badge badge-light"><%= report.treatment_end_age %>歳</span>
                          </div>
                          <div class="prefecture-badge">
                            <span class="badge badge-pill badge-primary"><%= link_to report.city.prefecture.name, "/category/area/prefecture/#{report.city.prefecture.id}" %></span>
                          </div>
                        </div>
                        <div class="tag-badge col-12 pl-0"%>
                          <% report.tags.each_with_index do |tag, i| %>
                            <span class="badge badge-info"><%= link_to tag.tag_name, "/category/tags/#{tag.tag_name}" %></span>
                            <% break if i== 2 %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="row">
                        <div class="col-md-3 pl-0 mt-4 mb-2 d-none d-md-block text-center">
                          <h6><%= link_to report.user.name, user_path(report.user_id) %></h6>
                        </div>
                        <div class="col-md-9 pl-0">
                          <div class="mt-3 d-lg-flex align-items-center justify-content-start">
                            <h6 class="mb-0"><%= report.clinic.name %></h6>
                            <div class="ml-2"><span class="badge badge-dark"><%= report.clinic.city.prefecture.name %></span>&nbsp;<span class="badge badge-dark"><%= report.clinic.city.name %></span></div><br>
                          </div>
                          <small class="text-muted">
                            <%= report.year_of_treatment_end.year %>年&nbsp;卒業&nbsp;/
                            <span>投稿:<%= report.created_at.to_s(:datetime_jp) %></span>
                            <span>更新:<time datetime="<%= report.updated_at %>"><%= time_ago_in_words(report.updated_at) %></time>前</span>
                          </small>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>