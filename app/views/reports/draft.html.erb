<h3 class="d-none d-md-block mt-4 mb-4">下書きレポコ</h3>
<h3 class="d-sm d-md-none mt-4 mb-4 text-center">下書きレポコ</h3>

<div class="container m-bottom">
  <div class="row reports-index">
    <% @reports.each do |report| %>
      <div class="report-box col-xs-12 col-sm-12 col-md-6 col-lg-4 my-2">
        <div class="report-box-inner mx-0.1 px-3 py-3 h-100 rounded border">
          <%= link_to report do %>
          <div class="report-body h-50">
            <h5 class="report-title text-dark"><%= report.title %></h5>
            <div class="row">
              <div class="tag-box col-xs-4 col-sm-4 col-md-3">
              
              </div>
            </div>
          </div>
          <% end %>
          <div class="report-info border-top">
            <div class="row">
              <div class="report-icon col-3">
                <%= report.user.icon %>
              </div>
              <div class="report-author col-9">
                <div><%= link_to report.user.name, user_path(report.user_id) %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>