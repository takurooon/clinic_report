<div class="container mt-3">
  <div class="p-0 text-center">
    <%= link_to category_search_path do %>
      <button type="button" class="btn text-muted rounded-pill">＼ <i data-feather="arrow-down" class="px-1 mb-1"></i>カテゴリからレポコを検索 <i data-feather="arrow-down" class="px-1 mb-1"></i>／</button>
    <% end %>
    <br>
    <div class="slide_bar">
      <div class="btn-group my-0">
        <%= link_to make_path, class: "btn btn-outline-primary rounded-pill mb-0 mx-1 h-100" do %>レポコの作り方<% end %>
        <%= link_to category_clinics_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>クリニック<% end %>
        <% if false %><%= link_to  category_clinics_area_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>エリア<% end %><% end %>
        <%= link_to category_age_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>年齢<% end %>
        <%= link_to category_status_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>ステータス<% end %>
        <%= link_to category_tags_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>原因･疾患<% end %>
        <%= link_to category_amh_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>AMH<% end %>
        <%= link_to category_area_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>住まい<% end %>
        <%= link_to category_various_costs_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>費用<% end %>
        <%= link_to category_works_path, class: "btn btn-outline-secondary rounded-pill mb-0 mx-1 h-100" do %>仕事<% end %>
      </div>
    </div>
  </div>
</div>