<div class="nested-fields well well-compact">
  <table class="table table-sm table-bordered table-hover mb-0">
    <thead>
      <tr>
        <th scope="col" class="hormon-label">Day&nbsp;<span><font size="1" color="#FF0000">(必須)</font></span></th>
        <th scope="col" class="hormon-label">E2</th>
        <th scope="col" class="hormon-label">FSH</th>
        <th scope="col" class="hormon-label">LH</th>
        <th scope="col" class="hormon-label">P4</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row" class="day-column"><%= f.select :day, Report.make_select_before_ishoku_hormone_day, { prompt: "まず選択" }, { class: "form-control text-muted" } %></th>
        <td class="hormon-column"><%= f.number_field :e2, { step: "0.1", class: "form-control" } %></td>
        <td class="hormon-column"><%= f.number_field :fsh, { step: "0.1", class: "form-control" } %></td>
        <td class="hormon-column"><%= f.number_field :lh, { step: "0.1", class: "form-control" } %></td>
        <td class="hormon-column"><%= f.number_field :p4, { step: "0.1", class: "form-control" } %></td>
      </tr>
    </tbody>
  </table>
  <small class="float-right pr-2">
    <%= link_to_remove_association "削除", f, class: "text-secondary" %>
  </small>
</div>